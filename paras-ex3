#include <iostream>
#include <iomanip>

using namespace std;

int main() {
    double billAmount, serviceCharge, totalAmount;

    // Ask the user to enter the bill amount
    cout << "Enter the bill amount: ";
    cin >> billAmount;

    // Calculate the service charge (15% of the total bill)
    serviceCharge = 0.15 * billAmount;

    // Calculate the total amount to pay
    totalAmount = billAmount + serviceCharge;

    // Display the service charge amount and the total amount to pay
    cout << "Service charge amount: $" << serviceCharge << endl;
    cout << "Total amount to pay: $" << totalAmount << endl;

    return 0;
}
